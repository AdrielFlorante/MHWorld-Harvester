import java.util.ArrayList;
import java.util.List;

public class CropState {
    public final Crop crop;
    public int timeLeft;
    public int yield;
    public final List<ActiveFertilizer> activeFertilizers;

    public CropState(Crop crop, int baseTime) {
        this.crop = crop;
        this.timeLeft = baseTime;
        this.yield = 0;
        this.activeFertilizers = new ArrayList<>();
    }

    public CropState copy() {
        CropState newState = new CropState(crop, timeLeft);
        newState.yield = this.yield;
        for (ActiveFertilizer af : this.activeFertilizers) {
            newState.activeFertilizers.add(af.copy());
        }
        return newState;
    }
}
